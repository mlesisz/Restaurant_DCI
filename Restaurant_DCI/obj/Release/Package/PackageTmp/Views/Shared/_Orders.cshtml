@model IEnumerable<Restaurant_DCI.Models.Order>

@if (Model.Count() > 0)
{
    <h3>@ViewBag.OrderState</h3>
    foreach (var item in Model)
    {
        <a class="nav-link" href="@Url.Action("ExecutionOfTheOrder","Chef",routeValues: new { orderId = item.OrderId })">
            <div class="list-group-item list-group-item-action">
                <div class="row">
                    <div class="col-xl-10">
                        <h5 class="alert-heading">Nr: @Html.DisplayTextFor(m => item.OrderId)</h5>
                        Uwagi do zamówienia: @Html.DisplayTextFor(m => item.Comment) .
                    </div>
                    <div class="col-xl-2 text-right"><p>@Html.DisplayTextFor(m => item.TotalPrice)zł</p></div>
                </div>
            </div>
        </a>
    }
}
else
{
    <h3>@ViewBag.OrderState</h3>
    <p>Brak zamówień</p>
}

