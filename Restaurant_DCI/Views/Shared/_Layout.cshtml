<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - Restaurant</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-3">
            <div class="container-fluid">

                @Html.ActionLink("Restauracja", "Index","Home", new { @class = "navbar-brand" })
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <div class="navbar-nav">
                    </div>
                    <div class="navbar-nav ml-auto">
                        @if (Session["FullName"] == null)
                        {
                            @Html.ActionLink("Logowanie", "Login", "Home", new { @class = "nav-link text-light" })
                            @Html.ActionLink("Rejestracja", "Register", "Home", new { @class = "nav-link text-light" })
                        }
                        else
                        {
                            @Html.ActionLink("Wyloguj się", "Logout", "Home", new { @class = "nav-link text-light" })
                        }

                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @RenderSection("ScriptsBottom", required: false)
</body>
@RenderSection("ScriptsBottom", required: false)

</html>
