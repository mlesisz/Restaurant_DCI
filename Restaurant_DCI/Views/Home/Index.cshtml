
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<div class="row justify-content-md-start">
    <div class="col-md-4">
        @if (Session["FullName"] != null)
        {
            <div class="card">
                <div class="card-header">
                    Witaj
                </div>
                <div class="card-body">
                    <p>Imie i Nazwisko: @Session["FullName"].ToString()</p>
                    <p>Email: @Session["Email"].ToString()</p>
                    <a href="@Url.Action("Logout","Home")" class="btn btn-warning">Wyloguj</a>
                </div>
            </div>
        }



    </div>
</div>

